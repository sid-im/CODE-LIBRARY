#include<bits/stdc++.h>
#define int long long int

using namespace std;

void solve(){
int n,m;
cin>>n>>m;
string s1,s2;
cin>>s1>>s2;
int  c=0;
reverse(s2.begin(),s2.end());
s1=s1+s2;
for(int i=0;i<s1.length();i++){
    if(s1[i]==s1[i+1]){
        c++;
    }
}
if(c>1){
    cout<<"NO"<<endl;
}
else{
    cout<<"YES"<<endl;
}



}

int32_t main() {
	// your code goes here
	int t;
	cin>>t;

	while(t--){
            solve();
	}
	return 0;
}
