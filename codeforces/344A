using namespace std;


void  solve(){
 int n,i,c=0;
    cin>>n;
    int a[100000];
    i=0;
    for(i=0; i<n; i++)
        cin>>a[i];

    for(i=0; i<n; i++)
    {
        if(a[i]!=a[i+1])
            c++;
    }
    cout<<c<<endl;

}

int32_t main(){
   fastIO

 solve();


return 0;
