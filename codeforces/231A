#include<bits/stdc++.h>
#define int long long int
# define mod 100000007
using namespace std;

void solve(){
int n;
cin>>n;int co=0,temp=0;
while(n--){
    int a,b,c;
    cin>>a>>b>>c;

    if(a==1)temp++;
    if(b==1)temp++;
    if(c==1)temp++;

    if(temp>1)co++;
temp=0;
}
cout<<co<<endl;
}

int32_t main() {

	int t=1;//cin>>t;

	while(t--){

            solve();
	}
	return 0;
}
