#include<bits/stdc++.h>

using namespace std;


void solve(){
int n;
cin>>n;

if(n%4==0){
    cout<<"YES"<<endl;
    int s=0,s2=0;
    for(int i=2;i<=n;i+=2){
       cout<<i<<endl;
        s+=i;
    }
     for(int i=1;i<n-2;i+=2){

        cout<<i<<endl;
        s2+=i;
    }
    cout<<abs(s2-s)<<endl;

}
else{
    cout<<"NO"<<endl;}
}






int main(){

int t;
cin>>t;
while(t--){
  solve();
}
return 0;


}
