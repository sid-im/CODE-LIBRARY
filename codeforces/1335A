#include<iostream>
#include <bits/stdc++.h>
#define ll long long
using namespace std;
void solve(){

int a;
cin>>a;
if(a<=2){
    cout<<0<<endl;
}
else{
    a-=1;
    cout<<a/2<<endl;
}
}

int main(){
    int t=1;

    cin>>t;
   for(int i=0;i<t;i++){
    //            cout<<"Case #"<<i+1<<": ";
        solve();
    }

}


