#include<bits/stdc++.h>
using namespace std;

void solve(){

int n;
cin>>n;
vector<int> a(n);
int m=0;
for(int i=0;i<n;i++){
        cin>>a[i];
m=max(m,a[i]);
}
int ans=0;
for(int i=0;i<n;i++){
ans+=abs(m-a[i]);
}
cout<<ans<<endl;
}


int main(){
int t=1;
//cin>>t;
while(t--){

solve();
}
return 0;}
