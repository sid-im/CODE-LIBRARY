#include<bits/stdc++.h>
using namespace std;

void solve(){
    int n;
    cin>>n;
    int k;
    cin>>k;
int a[n+1];
int m=1,an=0;
for(int i=0;i<n;i++){
    cin>>a[i];
    if(a[i]==m){
        m++;
    }
    else{
        an++;
    }

}

cout<<(an+k-1)/k<<endl;

}


int32_t main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
int t;
cin>>t;
while(t--)

{


    solve();
}


    return 0;
}
