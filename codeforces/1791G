#include<bits/stdc++.h>
#define int long long int
using namespace std;

void solve(){

int n;
cin>>n;
string s;
cin>>s;
int l=0,r=0;
int ha=s.length();
for(int i=0;i<s.length()/2;i++){
        if((s[i]=='0' && s[ha-i-1]=='1')|| (s[i]=='1' && s[ha-i-1]=='0')){
                l++;
        r++;
           }
           else{
            break;
           }
}
cout<<ha-l-r<<endl;


}
int32_t main(){

int t=1;
cin>>t;
while(t--){

    solve();
}
return 0;}
