#include<bits/stdc++.h>
#define int long long int
# define mod 100000007
using namespace std;

void solve(){
int n;
cin>>n;
if(n&1){
     int m=n-3;
     cout<<(m/2)+1<<endl;

     for(int i=0;i<(n/2)-1;i++){
        cout<<2<< " ";
     }
     cout<<3<<endl;
}
else{
          cout<<n/2<<endl;
   for(int i=0;i<(n/2);i++){
        cout<<2<< " ";
     }
}
}

int32_t main() {
	// your code goes here
	int t=1;
	//cin>>t;

	while(t--){
            solve();
	}
	return 0;
}
