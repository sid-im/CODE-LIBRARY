#include<bits/stdc++.h>
#define int long long int
# define mod 100000007
using namespace std;

void solve(){
string s;
cin>>s;
sort(s.begin(),s.end());
string ha;
for(int i=0;i<s.length();i++){
    if(s[i]!='+'){
        ha+=s[i];
        ha+='+';
    }
}
ha.erase(ha.length()-1,ha.length());
cout<<ha<<endl;
}

int32_t main() {

	int t=1;//cin>>t;

	while(t--){

            solve();
	}
	return 0;
}
