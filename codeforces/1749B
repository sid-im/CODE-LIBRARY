#include<iostream>
#include <bits/stdc++.h>
#define ll long long
using namespace std;
void solve(){

int a;
cin>>a;
vector<ll> n(a);
vector<ll> m(a);
  ll sum=0,count=0;
for(int i=0;i<a;i++){
    cin>>n[i];
    sum+=n[i];
}
for(int i=0;i<a;i++){
    cin>>m[i];
    count+=m[i];
}

int ans=*max_element(m.begin(), m.end());

cout<<sum+count-ans<<endl;
}

int main(){
int t;
cin>>t;
while(t--){
    solve();
}

}


