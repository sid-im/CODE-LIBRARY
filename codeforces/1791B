#include<bits/stdc++.h>
#define int long long int
using namespace std;

void solve(){
int x=0,y=0;
int n;
cin>>n;
string s;
cin>>s;
bool f=0;
for(int i=0;i<s.length();i++){
    if(s[i]=='U'){
        y++;
    }
    else if(s[i]=='R'){
            x++;

            }
                else if(s[i]=='D'){

            y--;
            }
                else if(s[i]=='L'){
            x--;

            }

            if(x==1 && y==1)
{

f=1;
}
}
if(f==1){
    cout<<"YES"<<endl;
}
else{
      cout<<"NO"<<endl;
}

}

int32_t main(){

int t=1;
cin>>t;
while(t--){

    solve();
}
return 0;}
