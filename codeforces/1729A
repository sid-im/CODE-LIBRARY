#include<iostream>
#include<bits/stdc++.h>
using namespace std;




int main(){

int n;cin>>n;

while(n--){
    int a,b,c;
    cin>>a>>b>>c;
    int a1=abs(b-c)+abs(c-1);
    int a2=abs(a-1);
    if(a1>a2){
        cout<<1<<endl;
    }
    else if(a2>a1){
        cout<<2<<endl;
    }
    else{
        cout<<3<<endl;
    }
}
    return 0;
}
